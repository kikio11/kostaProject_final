<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE  tiles-definitions PUBLIC
	"-//Aapche Software Foundation//DTD Tiles Configuration 2.0//EN"
	"http://tiles.apache.org/dtds/tiles-config_2_0.dtd"
>

<tiles-definitions>
      <definition name="base_layout" template="/views/module/template.jsp">
      <!-- header, footer는 핵심이고 중복되니까 base_layoutdp sjgdjwna 설정-->
            <put-attribute name="header" value="/views/module/header.jsp"/>
            <put-attribute name="footer" value="/views/module/footer.jsp"/>
      </definition>
      
<!-- 단, body를 다 지정해주어야함!  -->
  <!-- extends를 이용하여 푸터와 헤더를 고정시킨다. -->
  <!-- view 페이지마다 바디만 바꾸어 주면됨 -->
                                     
 <!-- BoardController에서 return값으로 나오는 명칭을   definition name으로 써주면 됨 -->
                                     
      <definition name="insert_form" extends="base_layout">
            <put-attribute name="body" value="/views/insert_form.jsp"/>
      </definition>
      
      <definition name="list" extends="base_layout">
            <put-attribute name="body" value="/views/list.jsp"/>
      </definition>
      
      <definition name="detail" extends="base_layout">
            <put-attribute name="body" value="/views/detail.jsp"/>
      </definition> 
      
</tiles-definitions>




